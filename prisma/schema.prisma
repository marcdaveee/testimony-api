generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id Int @default(autoincrement()) @id
  userName String?
  email String
  password String
  createDate DateTime
  updateDate DateTime?
  testimonies Testimony[]
  @@map("users")
}

model Role{
 id Int @id @default(autoincrement())
 name String @unique
@@map("roles")
}

model Testimony{
  id Int @id @default(autoincrement())
  title String
  content String
  user User @relation(fields: [userId], references: [id])
  userId Int 
}